    if (!savedHomework) {
      return 'üìö –ù–∞ —Ü–µ–π —Ç–∏–∂–¥–µ–Ω—å —É —Ç–µ–±–µ –Ω–µ–º–∞—î –∑–∞–ø–∏—Å–∞–Ω–∏—Ö –¥–æ–º–∞—à–Ω—ñ—Ö –∑–∞–≤–¥–∞–Ω—å! –ú–æ–∂–ª–∏–≤–æ, –≤–∞—Ä—Ç–æ —â–æ—Å—å –¥–æ–¥–∞—Ç–∏? üòä';
    }

    const homework: Homework[] = JSON.parse(savedHomework);
    if (homework.length === 0) {
      return 'üìö –ù–∞ —Ü–µ–π —Ç–∏–∂–¥–µ–Ω—å —É —Ç–µ–±–µ –Ω–µ–º–∞—î –∑–∞–ø–∏—Å–∞–Ω–∏—Ö –¥–æ–º–∞—à–Ω—ñ—Ö –∑–∞–≤–¥–∞–Ω—å! –ú–æ–∂–ª–∏–≤–æ, –≤–∞—Ä—Ç–æ —â–æ—Å—å –¥–æ–¥–∞—Ç–∏? üòä';
